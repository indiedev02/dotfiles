#!/bin/bash

BAR_COLOR=0xff1F0142
SPACE_ITEM=0xff521E92
ACTIVE_BG=0xff9252d5
WIDGET_BG=0x14EED8FF
TEXT_COLOR=0xffEED8FF

# This is a demo config to showcase some of the most important commands.
# It is meant to be changed and configured, as it is intentionally kept sparse.
# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

bar=(
  position=left
  height=46
  margin=10
  corner_radius=12
  blur_radius=30
  color=$BAR_COLOR
  display=main
  y_offset=10
  padding_right=6
  padding_left=6
)

sketchybar --bar "${bar[@]}"
##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

default=(
  icon.font="SF Pro:Bold:17.0"
  label.font="SF Pro:Bold:14.0"
  icon.color=$TEXT_COLOR
  label.color=$TEXT_COLOR
  background.color=$WIDGET_BG
  background.corner_radius=6
  background.height=34
  width=34
  icon.padding_left=5
  icon.padding_right=5
  icon.align=center
)
sketchybar --default "${default[@]}"

display_count=$(aerospace list-monitors --count)
ui_display_count=1

sketchybar --add event aerospace_workspace_change
# for sid in $(aerospace list-workspaces --all); do
#   sketchybar --add item space.$sid left \
#     --subscribe space.$sid aerospace_workspace_change \
#     --set space.$sid \
#     background.color=0x44ffffff \
#     background.corner_radius=5 \
#     background.height=20 \
#     background.drawing=off \
#     label="$sid" \
#     click_script="aerospace workspace $sid" \
#     script="$CONFIG_DIR/plugins/aerospace.sh $sid"
# done
while [ "$ui_display_count" -le "$display_count" ]; do
  # Monitor icon
  sketchybar --add item "mon.$ui_display_count" center \
    --set "mon.$ui_display_count" \
    icon="ô€¢¹"
  # Spaces
  for sid in $(aerospace list-workspaces --monitor "$ui_display_count"); do

    sketchybar --add item "sep.$ui_display_count.$sid" center \
      --set "sep.$ui_display_count.$sid" \
      width=8 \
      background.color=$BAR_COLOR

    sketchybar --add item "space.$sid" center \
      --subscribe "space.$sid" aerospace_workspace_change \
      --set "space.$sid" \
      icon="$sid" \
      background.color=$SPACE_ITEM \
      script="$PLUGIN_DIR/aerospace.sh $sid"

  done

  # Separator (except after last display)
  if [ "$ui_display_count" -lt "$display_count" ]; then
    sketchybar --add item "sep.$ui_display_count" center \
      --set "sep.$ui_display_count" \
      width=12 \
      background.color=$BAR_COLOR
  fi

  ui_display_count=$((ui_display_count + 1))
done

sketchybar --update
